<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- This is the line -->
    <!-- left 和right是左右边距 -->
    <item
        android:left="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="@color/black" />
        </shape>
    </item>
    <!--bottom是横线高度 -->
    <item android:bottom="2dp">
        <shape>
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>
